{
    "name": "yiisoft/translator-extractor",
    "type": "library",
    "description": "Yii message extractor",
    "keywords": [
        "i18n",
        "internationalization",
        "extractor"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/translator-extractor/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "chat": "https://t.me/yii3en",
        "source": "https://github.com/yiisoft/translator-extractor"
    },
    "require": {
        "php": "^7.4|^8.0",
        "yiisoft/yii-console": "^1.0",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/translator": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.18",
        "yiisoft/di": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\TranslatorExtractor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\TranslatorExtractor\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "console": "console.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
